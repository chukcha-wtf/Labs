<div class="text-center">
  <h2>Увійти від імені Адміністратора</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
                                html: {class: 'form-vartical' }) do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.remember_me, as: :boolean if device_mapping.rememberable? %>
    <%= f.butoon :submit, "Увійти", class: 'btn btn-primary' %>
  <% end %>
</div>